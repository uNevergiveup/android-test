<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="super_titulo">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/color_1</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="sub_titulo">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="texto_normal">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="boton_normal">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/border_boton</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>
    <style name="boton_relleno">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/relleno_boton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>